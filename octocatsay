#!/usr/bin/perl


# octocatsay
# Coby Chapple - https://github.com/cobyism/octocatsay

my $text = @ARGV[0];
unless ($text) {
  $text = <STDIN>;
  chomp $text;
}

print "
           MMM.           .MMM
           MMMMMMMMMMMMMMMMMMM
           MMMMMMMMMMMMMMMMMMM      _";
for ($i = 0; $i < length($text); $i++) {
  print "_";
}
print "_
          MMMMMMMMMMMMMMMMMMMMM    | ";
for ($i = 0; $i < length($text); $i++) {
  print " ";
}
print " |
         MMMMMMMMMMMMMMMMMMMMMMM   | $text |
        MMMMMMMMMMMMMMMMMMMMMMMM   |_   ";
for ($i = 0; $i < length($text) - 2; $i++) {
  print "_";
}
print "|
        MMMM::- -:::::::- -::MMMM    |/
         MM~:~   ~:::::~   ~:~MM
    .. MMMMM::. .:::+:::. .::MMMMM ..
          .MM::::: ._. :::::MM.
             MMMM;:::::;MMMM
      -MM        MMMMMMM
      ^  M+     MMMMMMMMM
          MMMMMMM MM MM MM
               MM MM MM MM
               MM MM MM MM
            .~~MM~MM~MM~MM~~.
         ~~~~MM:~MM~~~MM~:MM~~~~
        ~~~~~~==~==~~~==~==~~~~~~
         ~~~~~~==~==~==~==~~~~~~
             :~==~==~==~==~~
";
